<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="card">
        <div class="card-header">
          Filtro
        </div>
        <div class="card-body">
          <input type="search" name="search" id="search" placeholder="Digite o e-mail ou CPF do cliente">
          <button>Pesquisar</button>
        </div>
      </div>
      <br>
    <div class="card" style="width: 18rem">
      <div class="card-header">Consultas</div>
      <ul class="list-group list-group-flush">
        <% result.forEach(appo => { %> <% if(appo.date != undefined ) {%>
        <li class="list-group-item">
          Descrição: <%= appo.description %> <br />
          Paciente: <%= appo.name %> <br />
          CPF: <%= appo.description %> <br />
          E-mail: <%= appo.email %> <br />
          Data: <%= ` ${appo.date.getDate()+1}/
          ${appo.date.getMonth()}/${appo.date.getFullYear()} `%> <br />
          Hora: <%= appo.time %>
        </li>
        <% }%> <% })%>
      </ul>
    </div>
  </body>
</html>
